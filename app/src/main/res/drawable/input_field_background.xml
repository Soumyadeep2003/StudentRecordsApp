    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>

        </shape>
    </item>

    <!-- Main Background with Bottom Border -->
    <item android:top="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/white"/> <!-- Background Color -->
             <stroke android:width="1dp" android:color="@color/black"/> <!-- âœ… Added Black Border -->
        </shape>
    </item>

</layer-list>
